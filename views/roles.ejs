<!DOCTYPE html>
<head>
  <title>Roles</title>
  <link rel="stylesheet" href="/css/output.css" />
</head>
<body class="bg-[#E4E8EE]">
  <nav><%- include('partials/sidebar.ejs') %></nav>
  <div class="p-4 sm:ml-32">
    <header class="text-left">
        <input type="hidden" id="_csrf" value="<%= csrfToken %>">
        <div class="mb-4">
            <%- include('partials/rutaActual', {path: ['ajustes', 'roles']}) %>
        </div>
        <h1 class="mb-4 text-4xl font-bold text-gray-900">Roles</h1>
    </header>
    <table class="min-w-full divide-y divide-gray-200">
        <thead>
            <tr>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Descripción</th>
                <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            <% for (let i = 0; i < roles.length; i++) { %>
                <tr>
                    <td class="px-6 py-4 whitespace-no-wrap"><%= roles[i].Nombre %></td>
                    <td class="px-6 py-4 whitespace-no-wrap"><%= roles[i].DescripcionRol %></td>
                    <td class="px-6 py-4 whitespace-no-wrap">
                        <a href="/ajustes/roles/editarRol/<%= roles[i].IDRol %>" class="text-blue-600 hover:underline">Modificar rol</a>
                        <% if (roles[i].Nombre != 'Owner') { %>
                            <a href="/ajustes/roles/editarPrivilegios/<%= roles[i].IDRol %>" class="text-blue-600 hover:underline">Modificar privilegios</a>
                        <% } %>
                        <% if (roles[i].Nombre != 'Owner' && roles[i].Nombre != 'Administrador' && roles[i].Nombre != 'Seller') { %>
                            <button onclick="confirmarEliminacion('<%=roles[i].IDRol%>', '<%=roles[i].Nombre%>')" type="button" class="text-blue-700 border border-white font-medium rounded-full text-sm p-2.5 text-center inline-flex items-center">
                                <svg class="w-6 h-6 text-blue-700" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z"/>
                                </svg>                                  
                                <span class="sr-only">Eliminar rol</span>
                            </button>
                        <% } %>
                    </td>
                </tr>
            <% } %>

<script>
    function confirmarEliminacion(IDRol, nombreRol) {
        const modalHTML = `
            <div id="deleteModal" tabindex="-1" aria-hidden="true" class="fixed inset-0 z-50 flex justify-center items-center bg-black bg-opacity-50">
                <div class="relative p-4 text-center bg-white rounded-lg shadow-md">
                    <button type="button" class="absolute top-2 right-2 text-gray-400 hover:text-gray-900" onclick="cerrarModal()">
                        <svg class="w-6 h-6" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M5.293 5.293a1 1 0 011.414 0L10 8.586l3.293-3.293a1 1 0 111.414 1.414L11.414 10l3.293 3.293a1 1 0 01-1.414 1.414L10 11.414l-3.293 3.293a1 1 0 01-1.414-1.414L8.586 10 5.293 6.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                        </svg>
                    </button>
                    <h2 class="text-lg font-semibold text-gray-800">Confirmación de eliminación</h2>
                    <p class="mt-2 text-sm text-gray-600">¿Estás seguro de que deseas eliminar el rol "${nombreRol}"?</p>
                    <div class="mt-4 flex justify-center space-x-2">
                        <button class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600" onclick="eliminar(${IDRol})">Sí, eliminar</button>
                        <button class="px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300" onclick="cerrarModal()">Cancelar</button>
                    </div>
                </div>
            </div>
        `;

        document.body.insertAdjacentHTML('beforeend', modalHTML);
    }

    function eliminar(IDRol) {
        const csrf = document.getElementById('_csrf').value;
        fetch(`/ajustes/roles/eliminarRol`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'csrf-token': csrf,
            },
            body: JSON.stringify({ IDRol: IDRol })
        })
        .then((result) => {
            return result.json();
        })
        .then((data) => {
            if (data.success) {
                window.location.href = '/ajustes/roles';
            } else {
            console.error(data.error);
            }
        })
        .catch((error) => {
            console.log(error);
        });
    }

    function cerrarModal() {
        // Remueve el modal del DOM
        const deleteModal = document.getElementById('deleteModal');
        deleteModal.parentNode.removeChild(deleteModal);
    }
</script>           

        </tbody>
    </table>
  </div>
</body>